<div class="container">
  <h2> Comment on post:</h2>

  <p id="comment-post">
    <%= post.text %>
  </p>

  <form action="/feed/<%=post._id%>/comment" method="POST" id="new-comment">
    <div class="form">
      <textarea id="post-text" type="text" maxlength="200" name="text" placeholder="Type your comment here." rows="5"></textarea>
      <br>
      <br>
      <button class="buttons" type="submit">Submit</button>
    </div>
</div>