<div class="container">
  <h2>Login</h2>

  <form action="/auth/login" method="POST">
    <div>
      <label for="username">Hackername:</label>
      <input class="blank-space" type="text" name="username">
    </div>
    <br>
    <div>
      <label for="password">Password:</label>
      <input class="blank-space" type="password" name="password">
    </div>
    <% if (typeof message !== "undefined") { %>
      <div class="error-message">
        <%= message %>
      </div>
      <% } %>
        <br>
        <div>
          <input type="submit" value="Log In">
        </div>
  </form>
  <p class="account-message">
    Want to join?
    <a class="buttons" href="/auth/signup">Create Account</a>
  </p>
</div>