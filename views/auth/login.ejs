<div class="container-auth container">
  <h2>Login</h2>
  <div>
    <form action="/auth/login" method="POST" class="auth-form">
      <div class="auth-input">
        <label for="username">Hackername:</label>
        <input class="blank-space" type="text" name="username">
      </div>
      <br>
      <div class="auth-input">
        <label for="password">Password:</label>
        <input class="blank-space" type="password" name="password">
      </div>
      <% if (typeof message !== "undefined") { %>
        <div class="error-message">
          <%= message %>
        </div>
        <% } %>
          <br>
          <div>
            <input class="buttons" type="submit" value="Log In">
          </div>
    </form>
    <div class="account-message">
      <p>Want to join?</p>
      <a class="buttons" href="/auth/signup">Create Account</a>
    </div>
  </div>
</div>